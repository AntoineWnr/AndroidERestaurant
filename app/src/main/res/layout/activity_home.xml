<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">
    <ImageView
            android:src="@drawable/autodraw_21_03_2022__1__removebg_preview"
            android:layout_width="187dp"
            android:layout_height="310dp" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="@string/entrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewEntree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:textSize="34sp" android:fontFamily="@font/chelsea_market" android:lineSpacingExtra="10sp"
            app:layout_constraintHorizontal_bias="0.497" android:letterSpacing="0.15"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.091"/>
    <TextView
            android:text="@string/plats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewPlat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="34sp" android:fontFamily="@font/chelsea_market" android:lineSpacingExtra="10sp"
            app:layout_constraintHorizontal_bias="0.498" android:letterSpacing="0.15"
            app:layout_constraintTop_toBottomOf="@+id/textViewEntree"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="@string/BLEs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewBLE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="34sp" android:fontFamily="@font/chelsea_market" android:lineSpacingExtra="10sp"
            app:layout_constraintHorizontal_bias="0.498" android:letterSpacing="0.15"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewDessert" app:layout_constraintVertical_bias="0.222"/>
    <TextView
            android:text="@string/desserts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewDessert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="34sp" android:fontFamily="@font/chelsea_market" android:lineSpacingExtra="10sp"
            android:letterSpacing="0.15"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="160dp" app:layout_constraintTop_toBottomOf="@+id/textViewPlat"
            android:layout_marginTop="32dp" app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>